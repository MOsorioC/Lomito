<div class="container">
    <div class="row justify-content-center">
        <div class="col-4 container-login border rounded border-light">
            <div class="col-12">
                <img class="logotipo rounded-circle align-center" src="https://pbs.twimg.com/profile_images/700451535994671104/YkR_JUwH_400x400.png">

                <div class="col-12 text-center">
                    <h1>Pets-AB</h1>
                    <h2>Login</h2>
                </div>
                <div class="col-12 mt-5">
                    <form action="/login" method="post">
                        <div class="form-group">
                          <label for="username">Usuario</label>
                          <input type="email" class="form-control" name="username" id="username" placeholder="Escribe tu usuario">
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Escribe tu contraseña">
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-lg btn-block btn-outline-primary btn-primary-outlet btn-circle">Enviar</button>
                        </div>
                    </form>
                    {{#if message}}
                        <div class="alert alert-danger" role="alert">
                            {{message}}
                        </div>
                    {{/if}}
                </div>
                <div class="col-12 text-center mt-5">
                    <a href="#" class="a-primary">Do you forgot your password?</a>
                </div>
            </div>
        </div>
    </div>