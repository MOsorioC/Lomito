<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 container-login border rounded border-light">
            <div class="col-12 justify-content-center">
                <img class="logotipo rounded-circle align-center" src="https://pbs.twimg.com/profile_images/700451535994671104/YkR_JUwH_400x400.png">
                <div class="col-12 text-center">
                    <h1>Pets-AB</h1>
                    <h2>Sign Up</h2>
                </div>
                <div class="col-12 text-center">
                    <ul class="steps">
                        <li class="active">1</li>
                        <li class="">2</li>
                    </ul>
                </div>
            </div>
            <div class="col-12 mt-5">
                <form action="/signup" method="post" class="m-l-64 m-r-64">
                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label for="name">Nombre</label>
                                <input type="text" class="form-control" name="name" id="name" placeholder="Escribe tu nombre">
                            </div>
                        </div>
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label for="sex">Sexo</label>
                                <select class="form-control select-text minimal" name="sex" id="sex">
                                    <option selected disabled>Selecciona tu sexo</option>
                                    <option value="H">Masculino</option>
                                    <option value="M">Femenino</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label for="lastname">Apellido</label>
                                <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Escribe tu apellido">
                            </div>
                        </div>
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label for="age">Edad</label>
                                <input type="date" class="form-control" name="age" id="age" min="1960-01-01" max="2001-12-31" placeholder="Selecciona tu fecha de nacimiento">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label for="email">Correo</label>
                                <input type="email" class="form-control" name="email" id="email" placeholder="Ingresa tu correo electronico">
                            </div>
                        </div>
                        <div class="col-lg-6 col-xs-12">
                            <div class="form-group">
                                <label for="password">Contraseña</label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Ingresa tu contraseña">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-lg btn-small-width btn-outline-primary btn-primary-outlet btn-circle">Enviar</button>
                    </div>
                </form>
                {{#if message}}
                    <div class="alert alert-danger" role="alert">
                        {{message}}
                    </div>
                {{/if}}
            </div>
        </div>
    </div>